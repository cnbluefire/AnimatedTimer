<Window x:Class="AnimatedTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimatedTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black" TextBlock.Foreground="White">
        <StackPanel Orientation="Vertical">
            <local:AnimatedTimerView x:Name="timerView" FontSize="40" />
            <Button Content="Start" Click="Button_Click" HorizontalAlignment="Center" Padding="8,4" Margin="20" />
        </StackPanel>
    </Grid>
</Window>
